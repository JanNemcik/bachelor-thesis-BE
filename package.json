{
  "name": "bachelor-nestjs",
  "version": "0.3.0",
  "description": "Bachelor thesis Nestjs BE API",
  "author": "Jany Nemcik",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "postbuild:prod": "cp package.json dist",
    "prestart:deploy": "npm run prestart:prod && npm run postbuild:prod",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "echo 'test'",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.7.4",
    "@nestjs/core": "^5.7.4",
    "@nestjs/jwt": "^0.3.0",
    "@nestjs/microservices": "^5.7.4",
    "@nestjs/mongoose": "~5.2.2",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/websockets": "^5.7.4",
    "@types/bcrypt": "^3.0.0",
    "@types/crypto-js": "^3.1.43",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.123",
    "@types/mongoose": "^5.3.22",
    "bcrypt": "^3.0.4",
    "crypto-js": "^3.1.9-1",
    "express-mongo-sanitize": "^1.3.2",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mongo-sanitize": "^1.0.1",
    "mongoose": "^5.4.19",
    "mqtt": "^2.18.8",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "^6.4.0",
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.7.4",
    "@types/express": "^4.16.1",
    "@types/jest": "^23.3.14",
    "@types/node": "^10.14.1",
    "@types/supertest": "^2.0.5",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "supertest": "^3.4.2",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
